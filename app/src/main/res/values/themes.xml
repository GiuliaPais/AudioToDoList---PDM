<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AudioToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/Widget.AudioToDoList.DrawerToggleStyle</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Toolbar theme -->
    <style name="Theme.AudioToDoList.Toolbar">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="iconTint">@color/primaryTextColor</item>
    </style>
    <!-- Widgets -->
    <style name="Widget.AudioToDoList.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="iconTint">@color/player_button</item>
        <item name="iconSize">32dp</item>
    </style>
    <style name="Widget.AudioToDoList.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="trackColorInactive">@color/defaultDarkIconColor</item>
        <item name="thumbColor">@color/defaultDarkIconColor</item>
        <item name="thumbRadius">6dp</item>
    </style>
    <style name="Widget.AudioToDoList.DrawerToggleStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/primaryTextColor</item>
    </style>
    <style name="Widget.AudioToDoList.SelectableRowForeground" parent="">
        <item name="android:background">@color/primaryTextColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="Widget.AudioToDoList.SlidableRowBackground" parent="">
        <item name="android:background">@color/secondaryColor</item>
    </style>
</resources>