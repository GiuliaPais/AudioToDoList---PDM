<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme -->
    <style name="Theme.AudioToDoList" parent="Base.Theme.AudioTodoList">
        <item name="actionModeBackground">@color/primaryDarkColor</item>
        <item name="actionMenuTextColor">@color/primaryTextColor</item>
    </style>
    <!-- Toolbar theme -->
    <style name="Theme.AudioToDoList.Toolbar">
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorPrimarySurface</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>
    <!-- Widgets -->
    <style name="Widget.AudioToDoList.DrawerToggleStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/colorPrimary</item>
    </style>
    <style name="Widget.AudioToDoList.Button.IconOnly.PlayerPlay" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="iconTint">@color/player_button_icon_color</item>
        <item name="iconSize">32dp</item>
        <item name="android:textColor">@color/player_button_icon_color</item>
        <item name="backgroundTint">@color/player_button_bg_color</item>
    </style>
    <style name="Widget.AudioToDoList.Button.IconOnly.PlayerStop" parent="Widget.AudioToDoList.Button.IconOnly.PlayerPlay">
        <item name="iconTint">@color/defaultDarkIconColor</item>
        <item name="android:textColor">@color/defaultDarkIconColor</item>
    </style>
    <style name="Widget.AudioToDoList.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="trackColorInactive">@color/defaultDarkIconColor</item>
        <item name="thumbColor">@color/defaultDarkIconColor</item>
        <item name="trackColorActive">?attr/colorSecondary</item>
        <item name="thumbRadius">6dp</item>
    </style>
    <style name="Widget.AudioToDoList.SelectableRowForeground" parent="">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="Widget.AudioToDoList.SlidableRowBackground" parent="">
        <item name="android:background">?attr/colorSecondary</item>
    </style>
    <style name="Widget.AudioTodoList.RecorderFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>
    <style name="Widget.AudioTodoList.RecordBottomSheet" parent="">
        <item name="android:background">@color/sheetBackground</item>
    </style>
</resources>